{
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ES2021"],
    "target": "ES6",
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["./types"]
  },
  "ts-node": {
    "files": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules/*"]
}
